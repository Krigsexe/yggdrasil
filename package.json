{
  "name": "yggdrasil",
  "version": "0.1.0",
  "description": "L'Arbre-Monde de l'Intelligence Artificielle — Une AGI éthique, souveraine et vérifiable",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ai",
    "agi",
    "ethics",
    "truth",
    "verification",
    "orchestration",
    "open-source",
    "llm"
  ],
  "author": "YGGDRASIL Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Krigsexe/yggdrasil.git"
  },
  "bugs": {
    "url": "https://github.com/Krigsexe/yggdrasil/issues"
  },
  "homepage": "https://github.com/Krigsexe/yggdrasil#readme"
}
