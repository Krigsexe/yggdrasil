{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/heimdall" },
    { "path": "./packages/ratatosk" },
    { "path": "./packages/mimir" },
    { "path": "./packages/volva" },
    { "path": "./packages/hugin" },
    { "path": "./packages/thing" },
    { "path": "./packages/odin" },
    { "path": "./packages/munin" }
  ],
  "exclude": ["node_modules", "dist", "**/dist"]
}
