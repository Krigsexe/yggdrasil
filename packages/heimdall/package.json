{
  "name": "@yggdrasil/heimdall",
  "version": "0.1.0",
  "description": "HEIMDALL - Gateway component for YGGDRASIL (Auth, Rate Limiting, Audit)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "nest start",
    "start:prod": "node dist/main",
    "test": "vitest run",
    "test:unit": "vitest run --dir src",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/throttler": "^5.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.0",
    "ioredis": "^5.3.0",
    "pino": "^8.17.0",
    "@yggdrasil/shared": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^4.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  }
}
