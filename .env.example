# YGGDRASIL Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://yggdrasil:yggdrasil@localhost:5432/yggdrasil?schema=public

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# LLM PROVIDERS (Optional - for THING council)
# =============================================================================
# Anthropic (KVASIR)
ANTHROPIC_API_KEY=

# OpenAI (backup)
OPENAI_API_KEY=

# DeepSeek (NORNES)
DEEPSEEK_API_KEY=

# Ollama (SAGA - local)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SOURCES (MIMIR)
# =============================================================================
# arXiv API (no key needed, just rate limiting)
ARXIV_RATE_LIMIT=1

# PubMed API
PUBMED_API_KEY=
PUBMED_RATE_LIMIT=3
